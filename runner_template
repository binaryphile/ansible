#!/usr/bin/env bash

Here=$(cd "$(dirname "$BASH_SOURCE")"; cd -P "$(dirname "$(readlink "$BASH_SOURCE" || echo .)")"; pwd)
source "$Here"/task.bash

main() {
  run mytask
  run taskgroup "
    grouptask
  "
}

task mytask echo 'hello task!'

group taskgroup
{
  task grouptask echo 'hello grouptask!'
}

return 2>/dev/null
set -eu

main
summarize
